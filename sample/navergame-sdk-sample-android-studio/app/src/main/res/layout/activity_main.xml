<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#cccccc"
    tools:context=".MainActivity">

  <TextView
      android:id="@+id/start_home_button"
      android:layout_width="70dp"
      android:layout_height="70dp"
      android:text="START\nHOME"
      android:textSize="15dp"
      android:textColor="@color/NNG_BK"
      android:textStyle="bold"

      android:gravity="center"
      android:background="@drawable/icon1"
      android:backgroundTintMode="src_atop"
      android:backgroundTint="#30000000"

      android:layout_alignParentBottom="true"
      android:layout_marginBottom="30dp"
      android:layout_marginLeft="30dp"/>

  <TextView
      android:id="@+id/start_sorry_button"
      android:layout_width="70dp"
      android:layout_height="70dp"
      android:text="START\nSORRY"
      android:textSize="15dp"
      android:textColor="@color/NNG_BK"
      android:textStyle="bold"

      android:gravity="center"
      android:background="@drawable/icon1"
      android:backgroundTintMode="src_atop"
      android:backgroundTint="#30000000"

      android:layout_alignTop="@+id/start_home_button"
      android:layout_toRightOf="@+id/start_home_button"
      android:layout_marginLeft="20dp"/>

  <TextView
      android:id="@+id/start_board_button"
      android:layout_width="70dp"
      android:layout_height="70dp"
      android:text="START\nBOARD"
      android:textSize="15dp"
      android:textColor="@color/NNG_BK"
      android:textStyle="bold"

      android:gravity="center"
      android:background="@drawable/icon1"
      android:backgroundTintMode="src_atop"
      android:backgroundTint="#30000000"

      android:layout_alignTop="@+id/start_home_button"
      android:layout_toRightOf="@+id/start_sorry_button"
      android:layout_marginLeft="20dp" />

  <TextView
      android:id="@+id/start_feed_button"
      android:layout_width="70dp"
      android:layout_height="70dp"
      android:text="START\nFEED"
      android:textSize="15dp"
      android:textColor="@color/NNG_BK"
      android:textStyle="bold"

      android:gravity="center"
      android:background="@drawable/icon1"
      android:backgroundTintMode="src_atop"
      android:backgroundTint="#30000000"

      android:layout_alignTop="@+id/start_home_button"
      android:layout_toRightOf="@+id/start_board_button"
      android:layout_marginLeft="20dp" />


  <EditText
      android:id="@+id/boardId_edit"

      android:layout_width="200dp"
      android:layout_height="50dp"
      android:layout_alignParentTop="true"
      android:layout_alignParentLeft="true"
      android:layout_marginLeft="10dp"
      android:layout_marginTop="20dp"
      android:inputType="number"
      android:hint="BoardId"
      />

  <EditText
      android:id="@+id/feedId_edit"
      android:layout_width="200dp"
      android:layout_height="50dp"
      android:layout_below="@+id/boardId_edit"
      android:layout_alignParentLeft="true"
      android:layout_marginLeft="10dp"
      android:layout_marginTop="10dp"
      android:inputType="number"
      android:hint="FeedId"
      />

  <Button
      android:id="@+id/orientation_button"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_margin="10dp"
      android:drawableTop="@drawable/icon1"
      android:text="화면 가로/세로 모드 전환"

      android:layout_alignParentTop="true"
      android:layout_alignParentRight="true"
      android:layout_marginTop="30dp"
      android:layout_marginBottom="30dp"/>
</RelativeLayout>
